{
  "description": "Call Filter Flow - Handles incoming calls with whitelist and schedule filtering",
  "states": [
    {
      "name": "trigger",
      "type": "trigger",
      "transitions": [
        {
          "event": "incomingCall"
        },
        {
          "next": "check_filter",
          "event": "incomingMessage"
        }
      ],
      "properties": {
        "offset": {
          "x": 0,
          "y": 0
        }
      }
    },
    {
      "name": "check_filter",
      "type": "run-function",
      "transitions": [
        {
          "next": "check_result",
          "event": "success"
        },
        {
          "next": "say_error",
          "event": "fail"
        }
      ],
      "properties": {
        "service_sid": "YOUR_SERVICE_SID",
        "environment_sid": "YOUR_ENVIRONMENT_SID",
        "function_sid": "YOUR_FUNCTION_SID",
        "parameters": [
          {
            "key": "From",
            "value": "{{trigger.call.From}}"
          }
        ],
        "offset": {
          "x": 0,
          "y": 200
        },
        "url": "https://YOUR_DOMAIN.twil.io/callFilter"
      }
    },
    {
      "name": "check_result",
      "type": "split-based-on",
      "transitions": [
        {
          "next": "forward_call",
          "event": "match",
          "conditions": [
            {
              "friendly_name": "If forward is true",
              "arguments": ["{{widgets.check_filter.parsed.forward}}"],
              "type": "equal_to",
              "value": "true"
            }
          ]
        },
        {
          "next": "say_rejection",
          "event": "noMatch"
        }
      ],
      "properties": {
        "offset": {
          "x": 0,
          "y": 400
        },
        "input": "{{widgets.check_filter.parsed.forward}}"
      }
    },
    {
      "name": "forward_call",
      "type": "connect-call-to",
      "transitions": [
        {
          "event": "callCompleted"
        }
      ],
      "properties": {
        "offset": {
          "x": -200,
          "y": 600
        },
        "noun": "number",
        "to": "{{flow.variables.FORWARDING_NUMBER}}",
        "timeout": 30
      }
    },
    {
      "name": "say_rejection",
      "type": "say-play",
      "transitions": [
        {
          "event": "audioComplete"
        }
      ],
      "properties": {
        "offset": {
          "x": 200,
          "y": 600
        },
        "say": "Thank you for calling. We are currently not available. Please call during business hours or leave a message.",
        "voice": "Polly.Joanna",
        "language": "en-US"
      }
    },
    {
      "name": "say_error",
      "type": "say-play",
      "transitions": [
        {
          "event": "audioComplete"
        }
      ],
      "properties": {
        "offset": {
          "x": 400,
          "y": 400
        },
        "say": "We're sorry, but we're experiencing technical difficulties. Please try again later.",
        "voice": "Polly.Joanna",
        "language": "en-US"
      }
    }
  ],
  "initial_state": "trigger",
  "flags": {
    "allow_concurrent_calls": true
  }
}

