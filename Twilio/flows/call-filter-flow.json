{
  "description": "Call Filter Flow",
  "states": [
    {
      "name": "Trigger",
      "type": "trigger",
      "transitions": [
        {
          "event": "incomingMessage"
        },
        {
          "next": "SetForwardNumber",
          "event": "incomingCall"
        },
        {
          "event": "incomingConversationMessage"
        },
        {
          "event": "incomingRequest"
        },
        {
          "event": "incomingParent"
        }
      ],
      "properties": {
        "offset": {
          "x": 0,
          "y": 0
        }
      }
    },
    {
      "name": "SetForwardNumber",
      "type": "set-variables",
      "transitions": [
        {
          "next": "IsForwardable",
          "event": "next"
        }
      ],
      "properties": {
        "variables": [
          {
            "value": "+1234567890",
            "key": "forwardNumber"
          }
        ],
        "offset": {
          "x": 140,
          "y": 210
        }
      }
    },
    {
      "name": "IsForwardable",
      "type": "run-function",
      "transitions": [
        {
          "next": "ForwardCall",
          "event": "success"
        },
        {
          "next": "SayNotAvailable",
          "event": "fail"
        }
      ],
      "properties": {
        "service_sid": "YOUR_SERVICE_SID",
        "environment_sid": "YOUR_ENVIRONMENT_SID",
        "function_sid": "YOUR_FUNCTION_SID",
        "offset": {
          "x": 160,
          "y": 450
        },
        "parameters": [
          {
            "value": "{{trigger.call.From}}",
            "key": "from"
          }
        ],
        "url": "https://YOUR_DOMAIN.twil.io/isForward"
      }
    },
    {
      "name": "ForwardCall",
      "type": "connect-call-to",
      "transitions": [
        {
          "event": "callCompleted"
        },
        {
          "event": "hangup"
        }
      ],
      "properties": {
        "offset": {
          "x": 0,
          "y": 670
        },
        "caller_id": "{{contact.channel.address}}",
        "noun": "number",
        "to": "{{widgets.SetForwardNumber.forwardNumber}}",
        "timeout": 30
      }
    },
    {
      "name": "SayNotAvailable",
      "type": "say-play",
      "transitions": [
        {
          "event": "audioComplete"
        }
      ],
      "properties": {
        "voice": "Polly.Joanna",
        "offset": {
          "x": 330,
          "y": 670
        },
        "loop": 1,
        "say": "the client is not available at the moment. Please try again later. Thank you.",
        "language": "en-US"
      }
    }
  ],
  "initial_state": "Trigger",
  "flags": {
    "allow_concurrent_calls": true
  }
}
